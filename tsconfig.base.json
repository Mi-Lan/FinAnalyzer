{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@web/*": ["apps/web/src/*"],
      "@db/*": ["packages/database/*"],
      "@data-adapter/*": ["packages/data-adapter/src/data_adapter/*"]
    }
  },
  "exclude": ["node_modules"]
}
